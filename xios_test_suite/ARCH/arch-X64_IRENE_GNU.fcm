%CCOMPILER      mpicc
%FCOMPILER      mpif90
%LINKER         mpif90

%BASE_CFLAGS    -std=c++11 -w -fpermissive -D__XIOS_EXCEPTION
%PROD_CFLAGS    -O3 -D BOOST_DISABLE_ASSERTS
#%DEV_CFLAGS     -g -fbacktrace
%DEV_CFLAGS     -g 
%DEBUG_CFLAGS   -DBZ_DEBUG -g -fbacktrace -fno-inline -fsanitize=return

%BASE_FFLAGS    -D__NONE__ --free-form -ffree-line-length-0
%PROD_FFLAGS    -O3
#%DEV_FFLAGS     -g -fbacktrace
%DEV_FFLAGS     -g 
%DEBUG_FFLAGS   -g -fbacktrace

%BASE_INC       -D__NONE__
%BASE_LD        -lstdc++

%CPP            cpp
%FPP            cpp -P
%MAKE           gmake
