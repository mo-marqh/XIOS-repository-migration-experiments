%CCOMPILER      mpicxx -noswitcherror
%FCOMPILER      mpif90 -noswitcherror
%LINKER         mpif90  -noswitcherror

%BASE_CFLAGS    --c++11 -D__NONE__ --diag_suppress virtual_function_decl_hidden,extra_semicolon,code_is_unreachable,declared_but_not_referenced
%PROD_CFLAGS    -O3 -D BOOST_DISABLE_ASSERTS -w -v
%DEV_CFLAGS     -g -traceback
%DEBUG_CFLAGS   -DBZ_DEBUG -g -traceback -fno-inline

%BASE_FFLAGS    -D__NONE__ 
%PROD_FFLAGS    -O3 
%DEV_FFLAGS     -g -O2 -traceback
%DEBUG_FFLAGS   -g -traceback

%BASE_INC       -D__NONE__
%BASE_LD        -lstdc++ 

%CPP            cpp 
%FPP            cpp -P
%MAKE           gmake
