<?xml version="1.0"?>
<simulation>

  <context id="atmosphere" src="./context_atmosphere.xml"/>

  <context id="surface" src="./context_surface.xml"/>

  <context id="xios">
      <variable_definition>
        <variable_group id="buffer">
            <variable id="optimal_buffer_size" type="string">memory</variable>
            <variable id="buffer_factor_size" type="double">1.0</variable> 
         </variable_group>

        <variable_group id="parameters" >
          <variable id="info_level" type="int">100</variable>
          <variable id="print_file" type="boolean">true</variable>
        </variable_group>
      </variable_definition>
  </context>

</simulation>
